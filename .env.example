# Server Config
PORT=5000
BASE_URL=http://localhost:5000
PROJECT_NAME="SiteScope"

# Postgres Database Config
DATABASE_URL="postgresql://myuser:mypassword@localhost:5432/mydatabase?schema=public"

# AI Webhook Configuration (Optional)
# Uncomment and configure these to enable AI report generation
PAGE_ANALYZER_WEBHOOK_URL="https://your-ai-service.com/analyze-page"
CRAWL_ANALYZER_WEBHOOK_URL="https://your-ai-service.com/analyze-crawl"
AI_WEBHOOK_TIMEOUT=30000
AI_WEBHOOK_MAX_RETRIES=3
AI_WEBHOOK_RETRY_DELAY=5000

# ==================== EMAIL REPORT CONFIGURATION ====================

# Feature Toggle - Enable/disable email reports
FEATURE_EMAIL_REPORTS=true

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=username
SMTP_PASS=password
SMTP_SECURE=false        # true for TLS/SSL
SMTP_FROM="SiteScope Crawler <noreply@sitescope.com>"
SMTP_BCC="user@example.com"  # default recipient (optional)

# Frontend URL for report links
FRONTEND_URL=http://localhost:3000

# ==================== USER MANAGEMENT & AUTHENTICATION ====================

# Feature Toggle - Enable/disable user management
FEATURE_USER_MANAGEMENT=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
TOKEN_EXPIRY=24h

# Default Admin User (created on first startup)
DEFAULT_ADMIN_EMAIL=admin@sitescope.com
DEFAULT_ADMIN_PASSWORD=admin123

# ==================== MIGRATION CONFIGURATION ====================

# Enable/disable automatic migrations on server startup (default: true)
AUTO_MIGRATE=true

# Migration timeout in milliseconds (default: 60000 = 1 minute)
MIGRATION_TIMEOUT=60000

# Optional: Skip seeding during auto-migration
SKIP_SEED=1