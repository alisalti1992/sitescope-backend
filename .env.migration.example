# Migration Configuration
# Copy these variables to your .env file to control migration behavior

# Enable/disable automatic migrations (default: true)
AUTO_MIGRATE=true

# Migration timeout in milliseconds (default: 60000 = 1 minute)
MIGRATION_TIMEOUT=60000

# Environment - affects migration strategy
# development: uses 'prisma migrate dev' (more flexible)
# production: uses 'prisma migrate deploy' (safer)
NODE_ENV=development

# Database URL - required for migrations
DATABASE_URL="postgresql://user:password@localhost:5432/database"

# Optional: Skip seeding during auto-migration
SKIP_SEED=1